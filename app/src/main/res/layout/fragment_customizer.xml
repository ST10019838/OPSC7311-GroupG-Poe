<?xml version="1.0" encoding="utf-8"?>
<!-- Root layout using ConstraintLayout for flexible positioning -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Customizer.CustomizerFragment">

    <!-- Vertical LinearLayout for stacking UI components -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/dark_blue">

        <!-- Button to toggle visibility of goals section -->
        <Button
            android:id="@+id/button_goals_toggle"
            android:layout_width="182dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/dark_blue"
            android:drawableStart="@drawable/ic_goals"
            android:drawableEnd="@drawable/ic_expand"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="Goals"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <!-- TextView to display goals, initially hidden -->
        <TextView
            android:id="@+id/text_goals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your goals here"
            android:textColor="@android:color/white"
            android:visibility="gone"/>

        <!-- Button to toggle visibility of categories section -->
        <Button
            android:id="@+id/button_categories_toggle"
            android:layout_width="248dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/dark_blue"
            android:drawableStart="@drawable/ic_categories"
            android:drawableEnd="@drawable/ic_expand"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="Categories"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <!-- ScrollView to make the categories container scrollable -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"> <!-- Ensures ScrollView expands to fill the space if content is smaller than screen -->

            <!-- Layout to contain categories and the addition button, initially hidden -->
            <LinearLayout
                android:id="@+id/layout_categories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <!-- Container for dynamically added category items -->
                <LinearLayout
                    android:id="@+id/categoryItemsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"/>

                <!-- Button for adding new categories -->
                <Button
                    android:id="@+id/button_add_category"
                    style="@style/CustomButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add Category"
                    android:layout_margin="16dp"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </ScrollView>

        <!-- Button to toggle visibility of date & time section -->
        <Button
            android:id="@+id/button_date_time_toggle"
            android:layout_width="259dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/dark_blue"
            android:drawableStart="@drawable/ic_date_time"
            android:drawableEnd="@drawable/ic_expand"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="Date &amp; Time"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <!-- TextView to display date & time options, initially hidden -->
        <TextView
            android:id="@+id/text_date_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your date and time picker here"
            android:textColor="@android:color/white"
            android:visibility="gone"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
