<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="buttonStyle">@style/CustomButtonStyle</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Custom Button Style with light blue background -->
    <style name="CustomButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/teal_200</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">10dp</item>
    </style>

    <!-- Custom Button Style with White Frame with Dark Blue Background -->
    <style name="WhiteFrameStyle" parent="Widget.MaterialComponents.Button">
        <!-- Overriding the color set by the theme's colorPrimary -->
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/button_white_frame</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Style for error messages -->
    <style name="ErrorStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/teal_200</item>
        <item name="android:padding">10dp</item> <!-- Optional: for better padding -->
    </style>
</resources>
